\align center
\begin_inset Graphics
	filename Imagenes/ej4/fasebodesteoricossincompensarderivador.png
	lyxscale 50
	scale 60

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
