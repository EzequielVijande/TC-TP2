status open

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Graphics
	filename Imagenes/ej4/magbodesincompensarder.png
	lyxscale 40
	scale 40

\end_inset


\end_layout

\begin_layout Plain Layout
\noindent
\align center
\begin_inset Caption Standard

\begin_layout Plain Layout
Bode de magnitud.
\end_layout

\end_inset


\end_layout

\end_inset


\begin_inset space \hfill{}
\end_inset


\begin_inset Float figure
